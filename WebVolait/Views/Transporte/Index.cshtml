        @Html.ValidationMessageFor(m => m.Cod_TipoTransp)
    </div>

    <div class="editor-label">
        @Html.LabelFor(m => m.Empresa_Transp)
    </div>
    <div class="editor-field">
        @Html.EditorFor(m => m.Empresa_Transp)
        @Html.ValidationMessageFor(m => m.Empresa_Transp)
    </div>

    <div class="editor-label">
        @Html.LabelFor(m => m.Duracao_Transp)
    </div>
    <div class="editor-field">
        @Html.EditorFor(m => m.Duracao_Transp)
        @Html.ValidationMessageFor(m => m.Duracao_Transp)
    </div>

    <div class="editor-label">
        @Html.LabelFor(m => m.CNPJ_Transp)
    </div>
    <div class="editor-field">
        @Html.EditorFor(m => m.CNPJ_Transp)

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Volait Linhas Áereas</title>
    @*@Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")*@

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #F85F00">
        <a class="navbar-brand" href="@Url.Content("~/Home/Index")">Volait</a>
        
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        
        
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            @if (Request.IsAuthenticated)
            {

                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link active" aria-current="page" href="@Url.Content("~/Home/Index")">Home</a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Cadastros
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <li><a class="dropdown-item" href="@Url.Content("~/Atendimento/Index")">Atendimento</a></li>
                            <li><a class="dropdown-item" href="@Url.Content("~/Cliente/Index")">Cliente</a></li>
                            <li><a class="dropdown-item" href="@Url.Content("~/Funcionario/Index")">Funcionario</a></li>
                            <li><a class="dropdown-item" href="@Url.Content("~/Hospedagem/Index")">Hospedagem</a></li>
                            <li><a class="dropdown-item" href="@Url.Content("~/Pacote/Index")">Pacote</a></li>
                            <li><a class="dropdown-item" href="@Url.Content("~/Passeio/Index")">Passeio</a></li>
                            <li><a class="dropdown-item" href="@Url.Content("~/Transporte/Index")">Transporte</a></li>
                            <li><a class="dropdown-item" href="@Url.Content("~/Venda/Index")">Venda</a></li>
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Listagem
                        </a>

                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <li><a class="dropdown-item" href="@Url.Content("~/Atendimento/Index")">Atendimento</a></li>
                            <li><a class="dropdown-item" href="@Url.Content("~/Cliente/Index")">Cliente</a></li>
                            <li><a class="dropdown-item" href="@Url.Content("~/Funcionario/Index")">Funcionario</a></li>
                            <li><a class="dropdown-item" href="@Url.Content("~/Hospedagem/Index")">Hospedagem</a></li>
                            <li><a class="dropdown-item" href="@Url.Content("~/Pacote/Index")">Pacote</a></li>
                            <li><a class="dropdown-item" href="@Url.Content("~/Passeio/Index")">Passeio</a></li>
                            <li><a class="dropdown-item" href="@Url.Content("~/Transporte/Index")">Transporte</a></li>
                            <li><a class="dropdown-item" href="@Url.Content("~/Venda/Index")">Venda</a></li>
                        </ul>

                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    
                    <li><a class="nav-link active" aria-current="page" href="#">Olá @User.Identity.Name</a></li>
                    @using (Html.BeginForm("LogOff", "Conta", FormMethod.Post, new { id = "logoffForm" }))
                    {
                        <li><a class="nav-link active" aria-current="page"href="javascript:document.getElementById('logoffForm').submit()">Sair</a></li>
                    }
                </ul>

            }
            else
            {

                <ul class="nav navbar-nav navbar-right">
                    <li><a class="nav-link active" aria-current="page" href=@Url.Content("~/Conta/Login")>Login</a></li>
                </ul>
            }

        </div>

    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <center><p>&copy; @DateTime.Now.Year - Todos os direitos reservados</p></center>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

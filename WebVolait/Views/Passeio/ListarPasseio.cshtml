@model IEnumerable<WebVolait.Models.Passeio>
@{
    ViewBag.Title = "Listar";
}

<link rel="stylesheet" href="~/Content/bootstrap.css" />

<br /><p>@Html.ActionLink("Novo passeio", "Passeio")</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(m => m.Cod_Passeio)
        </th>

        <th>
            @Html.DisplayNameFor(m => m.Nome_Passeio)
        </th>

        <th>
            @Html.DisplayNameFor(m => m.Duracao_Passeio)
        </th>

        <th>
            @Html.DisplayNameFor(m => m.Desc_Passeio)
        </th>

        <th>
            @Html.DisplayNameFor(m => m.CNPJ_Passeio)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cod_Passeio)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Nome_Passeio)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Duracao_Passeio)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Desc_Passeio)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Empresa_Passeio)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.CNPJ_Passeio)
            </td>

            <td>
                @Html.ActionLink("Alterar", "AltPasseio", null, new { cdPasseio = item.Cod_Passeio }, new { @class = "btn btn-primary btn-xs" })
                @Html.ActionLink("Deletar", "DelPasseio", null, new { cdPasseio = item.Cod_Passeio }, new { @class = "btn btn-danger btn-xs" })
            </td>

        </tr>

    }

</table>

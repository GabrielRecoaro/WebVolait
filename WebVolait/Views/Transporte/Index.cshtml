        @Html.EditorFor(m => m.Cod_Transp)
        @Html.ValidationMessageFor(m => m.Cod_Transp)
    </div>

    <div class="editor-label">
        @Html.LabelFor(m => m.Cod_TipoTransp)
    </div>
    <div class="editor-field">

@model IEnumerable<WebVolait.Models.Pacote>
@{
    ViewBag.Title = "Listar";
}

<link rel="stylesheet" href="~/Content/bootstrap.css" />

<br /><p>@Html.ActionLink("Novo pacote", "Pacote")</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(m => m.Cod_Pacote)
        </th>

        <th>
            @Html.DisplayNameFor(m => m.Nome_Pacote)
        </th>

        <th>
            @Html.DisplayNameFor(m => m.Desc_Pacote)
        </th>

        <th>
            @Html.DisplayNameFor(m => m.Cod_ItemPacote)
        </th>

        <th>
            @Html.DisplayNameFor(m => m.Destino_Pacote)
        </th>

        <th>
            @Html.DisplayNameFor(m => m.Valor_Pacote)
        </th>


        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cod_Pacote)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Nome_Pacote)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Desc_Pacote)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Cod_ItemPacote)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Destino_Pacote)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Valor_Pacote)
            </td>


            <td>
                @Html.ActionLink("Alterar", "AltPacote", null, new { cdPacote = item.Cod_Pacote }, new { @class = "btn btn-primary btn-xs" })
                @Html.ActionLink("Deletar", "DelPacote", null, new { cdPacote = item.Cod_Pacote }, new { @class = "btn btn-danger btn-xs" })
            </td>

        </tr>

    }

</table>

@model IEnumerable<WebVolait.Models.Hospedagem>
@{
    ViewBag.Title = "Listar";
}
<link rel="stylesheet" href="~/Content/bootstrap.css" />

<br /><p>@Html.ActionLink("Nova hospedagem", "Index")</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(m => m.Cod_Hosp)
        </th>

        <th>
            @Html.DisplayNameFor(m => m.Nome_Hosp)
        </th>

        <th>
            @Html.DisplayNameFor(m => m.NumDiarias_Hosp)
        </th>

        <th>
            @Html.DisplayNameFor(m => m.CNPJ_Hosp)
        </th>

        <th>
            @Html.DisplayNameFor(m => m.Cod_TipoHosp)
        </th>


        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cod_Hosp)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Nome_Hosp)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.NumDiarias_Hosp)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.CNPJ_Hosp)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Cod_TipoHosp)
            </td>


            <td>
                @Html.ActionLink("Alterar", "AltHospedagem", null, new { cdHosp = item.Cod_Hosp }, new { @class = "btn btn-primary btn-xs" })
                @Html.ActionLink("Deletar", "DelHospedagem", null, new { cdHosp = item.Cod_Hosp }, new { @class = "btn btn-danger btn-xs" })
            </td>

        </tr>

    }

</table>

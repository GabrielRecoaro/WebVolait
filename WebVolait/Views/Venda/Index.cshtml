@model WebVolait.Models.Venda
@{
    ViewBag.Title = "Index";
}

<h2>Novo <b>Venda</b></h2>

@using (Html.BeginForm("Venda", "Venda", FormMethod.Post))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend> Cadastro de Vendas </legend>

